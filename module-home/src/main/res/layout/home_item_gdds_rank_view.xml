<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.yzg.home.gdds.gddslist.GddsItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:paddingRight="25dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/common_user_head" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_head"

                    android:layout_toRightOf="@id/iv_head"
                    android:gravity="center"
                    android:text="王富贵"
                    android:textColor="@color/common_color_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_head"
                    android:layout_toRightOf="@id/iv_head"
                    android:gravity="center"
                    android:text="粉丝1150"
                    android:textColor="@color/common_color_d5d5d5"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_subs"
                    android:layout_width="61dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/home_r5_subs_bg"
                    android:gravity="center"
                    android:text="已关注"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="61dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/tv_subs"
                    android:text="108元/月"
                    android:textColor="@color/common_color_eb97e"
                    android:textSize="10sp" />


                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_head"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:includeFontPadding="false"
                            android:text="333.5%"
                            android:textColor="#F36233"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="月收益率"
                            android:textColor="#d5d5d5"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:includeFontPadding="false"
                            android:text="9.26"
                            android:textColor="@color/common_color_333333"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="平均持仓时间"
                            android:textColor="#d5d5d5"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:includeFontPadding="false"
                            android:text="3222"
                            android:textColor="@color/common_color_333333"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="订阅数"
                            android:textColor="@color/common_color_666666"
                            android:textSize="10sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_below="@id/ll_info"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="20dp" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/view_line"-->
<!--                    android:layout_marginTop="22dp"-->
<!--                    android:text="已订阅：2020-4-30 到期" />-->


    <!--                <TextView-->
    <!--                    android:layout_width="61dp"-->
    <!--                    android:layout_height="26dp"-->
    <!--                    android:layout_below="@id/view_line"-->
    <!--                    android:layout_alignParentRight="true"-->
    <!--                    android:layout_marginTop="16dp"-->
    <!--                    android:background="@drawable/home_r5_subs_bg"-->
    <!--                    android:gravity="center"-->
    <!--                    android:text="续订"-->
    <!--                    android:textColor="@color/white"-->
    <!--                    android:textSize="12sp" />-->
            </RelativeLayout>
    </LinearLayout>
</layout>