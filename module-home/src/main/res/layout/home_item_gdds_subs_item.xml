<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.yzg.home.discover.bean.SquareCard" />
    </data>

    <RelativeLayout
        android:layout_width="87dp"
        android:layout_height="170dp"
        android:background="@drawable/home_r5_white_bg">

        <LinearLayout
            android:id="@+id/ll_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/home_rank_2"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/home_ic_user_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:text="王富贵"
            android:textColor="#111111"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_up"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="1888"
            android:textColor="#F36233"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_up"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:includeFontPadding="false"
            android:text="粉丝数"
            android:textColor="#D5D5D5"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_below="@id/tv_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:background="@drawable/home_r5_subs_bg"
            android:gravity="center"
            android:text="订阅"
            android:textColor="@color/white"
            android:textSize="11dp" />

    </RelativeLayout>
</layout>